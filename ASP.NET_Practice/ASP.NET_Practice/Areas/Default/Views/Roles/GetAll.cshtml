@model List<ASP.NET_Practice.DataAccess.SingleEntityRepo.Models.Role>
@{
    ViewBag.Title = "Роли";
    Layout = "../Shared/_Layout.cshtml";
}
<div>
    <ul class="list-group">
        @foreach (var role in Model)
        {
            <li class="list-group-item">
                <span>@role.Name</span>
                <span>@role.Code</span>
            </li>
        }
    </ul>
</div>
<div name="footer" class="btn-block">
    <button>
        @Html.ActionLink("Добавить", "Add", "Roles")
    </button>
        @Html.ActionLink("Назад", "Index", "Home")
    </div>
