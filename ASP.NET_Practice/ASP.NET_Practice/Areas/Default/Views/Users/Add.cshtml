@model ASP.NET_Practice.Models.UserView
@{
    ViewBag.Title = "Новый пользователь";
    Layout = "../Shared/_Layout.cshtml";
}

    @using (Html.BeginForm("Add", "Users", FormMethod.Post))
    {
        <fieldset>
            <div class="form-group">
                <label for="Name">Имя</label>
                <div class="controls">
                    @Html.ValidationMessage("FirstName")
                    @Html.TextBox("FirstName", Model.FirstName, new { @class = "form-control", placeholder = "Введите имя" })
                </div>
            </div>
            <div class="form-group">
                <label for="BirthDate">Дата рождения</label>
                <div class="controls">
                    @Html.DropDownList("BirthDay", Model.BirthDayList)
                    @Html.DropDownList("BirthMonth", Model.BirthMonthList)
                    @Html.DropDownList("BirthYear", Model.BirthYearList)
                </div>
            </div>
            <div class="form-group">
                <label for="Email">Email</label>
                <div class="controls">
                    @Html.ValidationMessage("Email")
                    @Html.TextBox("Email", Model.Email, new { @class = "form-control", placeholder = "Введите Email" })
                </div>
            </div>
            <div class="form-group">
                <label for="Password">Пароль</label>
                <div class="controls">
                    @Html.ValidationMessage("Password")
                    @Html.Password("Password", Model.Password, new { @class = "form-control", placeholder = "Введите пароль" })
                </div>
            </div>
            <div class="form-group">
                <label for="ConfirmPassword">Подтвердите пароль</label>
                <div class="controls">
                    @Html.ValidationMessage("ConfirmPassword")
                    @Html.Password("ConfirmPassword", Model.ConfirmPassword, new { @class = "form-control", placeholder = "Подтвердите пароль" })
                </div>
            </div>
            <div class="form-group">
                <label for="Captcha">
                    <img src=@Url.Action("Captcha", "Users") alt="captcha" />
                </label>
                <div class="controls">
                    @Html.ValidationMessage("Captcha")
                    @Html.TextBox("Captcha", Model.Captcha, new { @class = "form-control", placeholder = "Введите число на картинке" })
                </div>
            </div>
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Сохранить</button>
                @Html.ActionLink("Отмена", "GetAll", null, null, new { @class = "btn" })
            </div>
        </fieldset>
    }
